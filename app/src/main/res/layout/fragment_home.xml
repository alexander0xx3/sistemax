<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido a SISTEMAX"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese su nombre"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnSaludo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostrar saludo"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnIrAPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir a Perfil"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnBuscarGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar en Google"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnToggleGrafico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostrar Gráfico"
                android:layout_marginBottom="16dp" />

            <ImageView
                android:id="@+id/imagenGrafico"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:contentDescription="Gráfico de rendimiento" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>